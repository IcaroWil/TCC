# 🗄️ Configuração do Banco de Dados
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# 🔐 Configuração JWT
JWT_SECRET="your-super-secure-jwt-secret-key-here-generate-with-crypto"
JWT_EXPIRATION="24h"

# 🚀 Configuração do Servidor
PORT=3000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# 📧 Configuração do Serviço de Email (Opcional)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"

# 📱 Configuração do Serviço SMS (Opcional)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# 📝 Instruções:
# 1. Copie este arquivo para .env
# 2. Substitua todos os valores de exemplo pela sua configuração real
# 3. Gere um JWT_SECRET seguro usando: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# 4. Nunca faça commit de arquivos .env no controle de versão